<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="top"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchSO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tooltipText="Search Inventory"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/refreshInv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|right"
        android:layout_marginStart="318dp"
        android:clickable="true"
        android:foregroundGravity="right"
        android:src="@drawable/ic_autorenew_black_24px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ListView
            android:id="@+id/list_view_inventory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"></ListView>

    </LinearLayout>
</RelativeLayout>

