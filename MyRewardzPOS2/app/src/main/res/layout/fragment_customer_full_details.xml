<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerFullDetailsFragment">

    <ImageView
        android:id="@+id/imageView_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:clickable="true"
        android:src="@drawable/close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cusID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    android:text="ID:"
                    />
                <TextView
                    android:id="@+id/cusIDtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/namelbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    android:text="Name:"
                    />

                <TextView
                    android:id="@+id/cfname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/cphonelbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    android:text="Phone1:"
                    />

                <TextView
                    android:id="@+id/ctel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#2E64FE"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/cphonelbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    android:text="Phone2:"
                    />

                <TextView
                    android:id="@+id/ctel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#2E64FE"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/emaillbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    android:text="Email:"
                    />
                <TextView
                    android:id="@+id/emailtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/addbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    android:text="Address:"
                    />
                <TextView
                    android:id="@+id/addtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/loclbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    android:text="Location:"
                    />
                <TextView
                    android:id="@+id/loctxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laymain"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="#736F6E"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </LinearLayout>


</FrameLayout>
